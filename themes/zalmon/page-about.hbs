{{!< default}} {{#post}} <div class="wrapper">
    {{!-- {{> slider}} --}}
    <div class="info-holder">
        <!-- info -->
        <div class="info">
            <div class="column img-frame wow fadeInLeft" data-wow-delay="0.6s">
                <div class="img"></div>
                <div class="text">
                    <span class="num">{{primary_author.name}}</span>
                    <h2 class="tild"></h2>
                    <div class="box">
                        <div class="box-inner">
                            <h3>{{title}}</h3>
                        </div>
                    </div>
                </div>

                <div class="image wow fadeInRight" data-wow-delay="0.6s"><img src="{{profile_image}}" alt="{{name}}">
                </div>
            </div>
            <div class="column txt-frame wow fadeInUp" data-wow-delay="0.6s">
                {{#if custom_excerpt}}
                <p>{{custom_excerpt}}</p>
                {{/if}}
                {{#if feature_image}}
                <img class="gh-feature-image" src="{{feature_image}}" alt="{{title}}" />
                {{/if}}
                <div class="signature">
                    <img src="" alt="signature">
                </div>
            </div>
        </div>
    </div>
   
    <header class="gh-header gh-canvas">
        {{#if custom_excerpt}}
        <p class="gh-excerpt">{{custom_excerpt}}</p>
        {{/if}}
    </header>

    <div class="gh-content gh-canvas">
        {{content}}
    </div>
    </div>

    </div>
    </div>

    {{/post}}